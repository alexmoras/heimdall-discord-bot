# Heimdall Discord Bot Configuration

discord:
  # Your Discord bot token from https://discord.com/developers/applications
  token: "YOUR_DISCORD_BOT_TOKEN"
  
  # Your Discord server (guild) ID
  guild_id: "YOUR_GUILD_ID"
  
  # Role ID for administrators (optional - users with Administrator permission will also have access)
  admin_role: "YOUR_ADMIN_ROLE_ID"
  
  # Base members role - assigned to ALL verified users (in addition to their team role)
  # This role should have the basic permissions you want all members to have
  members_role: "YOUR_MEMBERS_ROLE_ID"

  # Welcome message sent to users when they join the server
  # This message explains how to get verified
  # You can customize this to match your server's tone and requirements
  welcome_message: |
    ðŸ‘‹ Welcome to the server!

    To gain access, you need to verify your work email address.

    Please reply to this message with your work email address (e.g., yourname@company.com).

    Your email must be from one of our approved company domains.

email:
  # SMTP server configuration for sending verification emails
  smtp_host: "smtp.gmail.com"
  smtp_port: 587
  smtp_username: "your-email@gmail.com"
  smtp_password: "your-app-password"
  from_address: "noreply@yourdomain.com"
  from_name: "Heimdall Bot"

server:
  # Port for the web server to listen on
  port: 8080
  
  # Base URL where your verification page will be hosted
  # This is used in the verification email link
  base_url: "https://yourdomain.com"
  
  # Log level: ERROR, WARN, INFO, DEBUG (default: INFO)
  # ERROR - Only critical errors
  # WARN  - Warnings and errors
  # INFO  - Normal operation logs (recommended)
  # DEBUG - Detailed debug information
  log_level: "INFO"

features:
  # Enable team/role selection during verification
  # When disabled, users will only receive the base members_role
  # Team selection commands (/heimdall-changeteam) will also be disabled
  # The /heimdall-verify command will still work but without team assignment
  enable_team_selection: true

# List of approved email domains
# Users can only verify with emails from these domains
approved_domains:
  - "yourcompany.com"
  - "yourcompany.co.uk"
  - "partner-company.com"

# Team roles that users can select during verification
# Format: "Team Name": "Discord Role ID"
# Only used when features.enable_team_selection is true
# You can define as many or as few teams as needed
teams:
  "Engineering": "ROLE_ID_1"
  "Product": "ROLE_ID_2"
  "Design": "ROLE_ID_3"
  "Marketing": "ROLE_ID_4"
  "Sales": "ROLE_ID_5"
